{
  "name": "pian-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vue-tsc && vite build",
    "preview": "vite preview --port 9527",
    "stylelint": "stylelint \"./**/*.{css,less,vue,html}\" --cache",
    "stylelint:fix": "stylelint \"./**/*.{css,less,vue,html}\" --cache --fix",
    "lint": "eslint --fix",
    "prettier": "prettier --write \"./**/*.{html,vue,ts,tsx,js,jsx,css,less,scss,json,md}\"",
    "prepare": "husky install",
    "commitlint": "commitlint --config commitlint.config.cjs -e -V"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.4.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^20.14.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "eslint": "^9.4.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^15.4.0",
    "husky": "^9.0.11",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.2",
    "release-it": "^17.6.0",
    "cz-git": "^1.6.1",
    "stylelint": "^16.8.2",
    "stylelint-config-recommended-less": "^3.0.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.13.0",
    "vite": "^5.2.0",
    "vite-plugin-eslint": "^1.8.1",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.6"
  },
  "lint-staged": {
    "src/**/*.{ts,js,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{html,css,less,scss,md}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}